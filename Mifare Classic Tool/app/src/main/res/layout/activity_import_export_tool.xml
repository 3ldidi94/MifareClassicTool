<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewImortExportTool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.syss.MifareClassicTool.Activities.ImportExportTool"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/linearLayoutImportExportTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonImportExportToolImportDump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/arrow_up"
            android:onClick="onImportDump"
            android:text="@string/action_import_dump" />

        <Button
            android:id="@+id/buttonImportExportToolExportDump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/arrow_down"
            android:onClick="onExportDump"
            android:text="@string/action_export_dump" />

        <TextView
            android:id="@+id/textViewImportExportToolInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_info"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:text="@string/text_export_convert_dest_info" />

    </LinearLayout>

</ScrollView>